  <script>
    const pupils = document.querySelectorAll('.pupil');
    const mouths = document.querySelectorAll('.mouth');
    const passwordInput = document.getElementById('password');
    const loginForm = document.getElementById('loginForm');

    let reverseEye = false;

    document.addEventListener('mousemove', (e) => {
      pupils.forEach((pupil) => {
        const eye = pupil.parentElement.getBoundingClientRect();
        const eyeCenterX = eye.left + eye.width / 2;
        const eyeCenterY = eye.top + eye.height / 2;
        let deltaX = e.clientX - eyeCenterX;
        let deltaY = e.clientY - eyeCenterY;

        if (reverseEye) {
          deltaX *= -1;
          deltaY *= -1;
        }

        const distance = Math.sqrt(deltaX ** 2 + deltaY ** 2);
        const maxMove = 2.5;
        const ratio = Math.min(maxMove / distance, 1);
        const moveX = deltaX * ratio;
        const moveY = deltaY * ratio;

        pupil.style.transform = `translate(${moveX}px, ${moveY}px)`;
      });
    });

    passwordInput.addEventListener('focus', () => {
      reverseEye = true;
      mouths.forEach(m => m.classList.add('tilted'));
    });

    passwordInput.addEventListener('blur', () => {
      reverseEye = false;
      mouths.forEach(m => m.classList.remove('tilted'));
    });

   loginForm.addEventListener('submit', (e) => {
  e.preventDefault();
  mouths.forEach(m => m.classList.add('smile'));

  // Tambahkan efek senyum 1 detik, lalu redirect
  setTimeout(() => {
    mouths.forEach(m => m.classList.remove('smile'));
    // Ganti URL di bawah dengan alamat websitemu
    window.location.href = "zhalecth.html"; 
  }, 1000);
});

  </script>
